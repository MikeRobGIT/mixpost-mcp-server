{
  "mcpServers": {
    "sequential-thinking": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "lodgify": {
      "command": "bunx",
      "args": ["-y", "@mikerob/lodgify-mcp@latest"],
      "env": {
        "LODGIFY_API_KEY": "YOUR_LODGIFY_API_KEY_HERE"
      }
    },
    "taskmaster-ai": {
      "command": "bunx",
      "args": ["-y", "--package=task-master-ai", "task-master-ai"]
    },
    "mixpost": {
      "type": "stdio",
      "command": "bun",
      "args": ["run", "dev"],
      "env": {
        "MIXPOST_BASE_URL": "https://your-mixpost-instance.com",
        "MIXPOST_WORKSPACE_UUID": "your-workspace-uuid-here",
        "MIXPOST_API_KEY": "your-mixpost-api-key-here",
        "MIXPOST_CORE_PATH": "mixpost"
      }
    }
  }
}